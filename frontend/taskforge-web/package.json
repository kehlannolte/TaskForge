{
  "name": "taskforge-web",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "bash -c 'pids=$(lsof -ti tcp:3007 2>/dev/null); if [ -n \"$pids\" ]; then echo Killing $pids on :3007 && kill -9 $pids; fi; rm -f .next/dev/lock; next dev -p 3007 & sleep 3 && open http://localhost:3007'",
    "build": "next build",
    "start": "next start -p 3007"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.552.0",
    "next": "^16.0.1",
    "next-auth": "^4.24.13",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^22.18.13",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.9.3"
  }
}
