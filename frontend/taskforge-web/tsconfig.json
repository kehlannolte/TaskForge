{
  "compilerOptions": {
    /* --------------------------------------------------
       Core compiler behavior
    -------------------------------------------------- */
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    /* --------------------------------------------------
       Module resolution & aliases
    -------------------------------------------------- */
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    /* --------------------------------------------------
       Path aliases (so '@/lib/api' works)
    -------------------------------------------------- */
    "baseUrl": "src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    /* --------------------------------------------------
       Next.js TypeScript plugin
    -------------------------------------------------- */
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true
  },
  /* --------------------------------------------------
     Included files
  -------------------------------------------------- */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
